<?xml version="1.0" standalone="no"?>
<!DOCTYPE colorbar_list SYSTEM "colorbars.dtd">

<colorbar_list xmlns:py="http://codespeak.net/lxml/objectify/pytype">
    <colorbar name="wv_so1">
        <!-- 
            min and max vals can be any values, 
            start and end vals in transitions below must fill the entire range.
                The first specified start_val MUST equal min_val
                The last specified end_val MUST equal max_val
        -->
        <min_val>200</min_val>
        <max_val>270</max_val>
        <transition>
            <!-- 
                start_color and end_color can be any matplotlib supported color value.
                http://matplotlib.org/api/colors_api.html
                Test using color full or abbreviated names: 
                    pink = (1,.75,.8)
                    r = red = (1,0,0)
            -->
            <start_color>#006400</start_color>
            <end_color>#228B22</end_color>
            <start_val>200</start_val>
            <end_val>210</end_val>
        </transition>
        <transition>
            <!-- 
                Test colors using tuples
                    (0,.5,0) =~ Green
                or RGB hex specification
                    #0000FF = Blue
            -->
            <start_color>#228B22</start_color>
            <end_color>#40E0D0</end_color>
            <start_val>210</start_val>
            <end_val>220</end_val>
        </transition>
        <transition>
            <!-- 
                Test colors using tuples
                    (0,.5,0) =~ Green
                or RGB hex specification
                    #0000FF = Blue
            -->
            <start_color>(0,.5,0.5)</start_color>
            <end_color>#FF00FF</end_color>
            <start_val>220</start_val>
            <end_val>230</end_val>
        </transition>
        <transition>
            <!-- 
                Test colors using html color names
            -->
            <start_color>#FFFFFF</start_color>
            <end_color>#000080</end_color>
            <start_val>230</start_val>
            <end_val>240</end_val>
        </transition>
        <transition>
            <!-- 
                Test colors using html color names
            -->
            <start_color>#FFFF99</start_color>
            <end_color>#331900</end_color>
            <start_val>240</start_val>
            <end_val>270</end_val>
        </transition>
    </colorbar> 
</colorbar_list>

