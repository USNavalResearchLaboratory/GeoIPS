<?xml version="1.0" standalone="no"?>
<!DOCTYPE product_file SYSTEM "../productfiles.dtd">

<!--
    Notes:
        See ../productfiles.dtd in this directory for full notes.  All DTD information
        is contained there.
        Arunas 20140407 changed celcius to celsius
-->
<product_file>
<product method='basic' name='Vapor'>
    <basic_args>
        <source name='modis'>
            <var>chan27.0BT</var>
        </source>
        <img>
            <equation>chan27.0BT</equation>
            <range>
                <min_value>-70.0</min_value>
                <max_value>0.0</max_value>
                <units>celsius</units>
            </range>
        </img>
        <day_night>both</day_night>
        <cmap>invert-hsl256</cmap>
        <colorbar>
            <cmap>invert-hsl256</cmap>
            <ticks>-70 -50 -30 -10 0</ticks>
        </colorbar>
        <coastcolor>0 0 0</coastcolor>
        <gridcolor>0 0 0</gridcolor>
    </basic_args>
</product>
</product_file>
