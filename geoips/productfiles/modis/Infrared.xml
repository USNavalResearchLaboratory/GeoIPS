<?xml version="1.0" standalone="no"?>
<!DOCTYPE product_file SYSTEM "../productfiles.dtd">

<!--
    Notes:
        See ../productfiles.dtd in this directory for full notes.  All DTD information
        is contained there.
        Arunas 20140407 changed celcius to celsius
-->
<product_file>
<product method='basic' name='Infrared' testonly='no'>
    <basic_args>
        <source name='modis'>
            <var>chan31.0BT</var>
        </source>
        <img>
            <equation>chan31.0BT</equation>
            <range>
                <min_value>-90</min_value>
                <max_value>30</max_value>
                <units>celsius</units>
            </range>
        </img>
        <day_night>both</day_night>
        <cmap>tcirRev_ascii</cmap>
        <colorbar>
            <cmap>tcirRev_ascii</cmap>
            <ticks>-90 -70 -50 -30 0 30</ticks>
        </colorbar>
        <coastcolor>0 0 0</coastcolor>
        <gridcolor>0 0 0</gridcolor>
    </basic_args>
</product>
</product_file>
