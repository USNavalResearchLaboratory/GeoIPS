<product_file>
<product method='basic' name='WVLower'>
    <basic_args>
        <source name='abi'>
            <var>B10BT</var> <!-- 7.3um, Lower-level tropospheric Water Vapor band, IR -->
        </source>
        <img>
            <equation>B10BT</equation>
            <range>
                <min_value>203.15</min_value>
                <max_value>268.15</max_value>
                <units>K</units>
            </range>
        </img>
        <day_night>both</day_night>
        <cmap>invert-hsl256</cmap>
        <colorbar>
            <cmap>invert-hsl256</cmap>
            <ticks>200 210 220 230 240 250 260 270</ticks>
            <title>7.3um BT ($^\circ$K)</title>
        </colorbar>
        <coastcolor>0 0 0</coastcolor>
        <gridcolor>0 0 0</gridcolor>
    </basic_args>
</product>
</product_file>
