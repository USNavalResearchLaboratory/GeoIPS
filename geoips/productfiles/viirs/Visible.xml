<product_file>
<product method='basic' name='Visible'>
    <basic_args>
        <source name='viirs'>
            <var zenith='yes'>SVM05Rad</var>
            <gvar>SunZenith</gvar>
        </source>
        <img>
            <equation>SVM05Rad</equation>
            <range>
                <min_value>0.0</min_value>
                <max_value>500.0</max_value>
                <units>radiance</units>
            </range>
            <gamma1>1.2</gamma1>
        </img>
        <day_night>day</day_night>
        <cmap>Greys_r</cmap>
        <colorbar>
            <cmap>Greys_r</cmap>
            <ticks>0 100 200 300 400 500</ticks>
        </colorbar>
        <coastcolor>0 0 0</coastcolor>
        <gridcolor>0 0 0</gridcolor>
    </basic_args>
</product>
</product_file>
