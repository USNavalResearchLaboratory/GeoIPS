<product method="basic" name="Visible-Gray">
    <basic_args>
        <source name='seviri'>
            <var zenith='yes'>B02Ref</var> <!-- 0.86um B03 ABI   VIS008  0.8um MSG Veggie band, near-IR                                         -->
        </source>
        <img>
            <equation>B02Ref</equation>
            <range>
                <min_value>0.0</min_value>
                <max_value>100.0</max_value>
                <outbounds>crop</outbounds>
                <units>reflectance</units>
            </range>
            <gamma1>1.5</gamma1>
        </img>
        <day_night>day</day_night>
        <cmap>Greys_r</cmap>
        <coastcolor>255 180 0</coastcolor>
        <gridcolor>255 180 0</gridcolor>
    </basic_args>
</product>
